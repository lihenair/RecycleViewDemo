            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_toEndOf="@id/pic"-->
            <!--tools:text="Naruto"/>-->
    </RelativeLayout>

</android.support.v7.widget.CardView>
